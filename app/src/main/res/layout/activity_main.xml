<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9EFF9"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/LogoBamSplashe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logosplah"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp">

    </ImageView>

    <TextView
        android:id="@+id/bamText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="BAM++"
        android:textColor="#000000"
        android:textSize="15pt"
        app:layout_constraintLeft_toLeftOf="@id/LogoBamSplashe"
        app:layout_constraintRight_toRightOf="@id/LogoBamSplashe"
        app:layout_constraintTop_toBottomOf="@+id/LogoBamSplashe" />;

    <TextView
        android:id="@+id/textWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="cursive"
        android:text="Weekly Reminder"
        android:textColor="#000000"
        android:textSize="15pt"
        app:layout_constraintLeft_toLeftOf="@id/bamText"
        app:layout_constraintRight_toRightOf="@id/bamText"
        app:layout_constraintTop_toBottomOf="@+id/bamText">

    </TextView>

    <TextView
        android:id="@+id/darsadSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"

        android:text="0 %"
        android:textColor="#000000"
        android:textSize="7pt"
        app:layout_constraintLeft_toLeftOf="@id/textWeek"
        app:layout_constraintRight_toRightOf="@id/textWeek"
        app:layout_constraintTop_toBottomOf="@+id/textWeek">

    </TextView>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintLeft_toLeftOf="@id/darsadSplash"
        app:layout_constraintRight_toRightOf="@id/darsadSplash"
        app:layout_constraintTop_toBottomOf="@+id/darsadSplash"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

    </ProgressBar>



</android.support.constraint.ConstraintLayout>